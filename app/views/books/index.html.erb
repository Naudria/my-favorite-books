<h1>All Books</h1>
<div>
  <h3>Filter Books:</h3>
  <%= form_tag("/books", method: "get") do %>
    <%= select_tag "rating", options_for_select(["All", "Most Reviewed"]) %>
    <%= submit_tag "Filter" %>
  <% end %>
</div>
<table>
  <tr>
    <td><strong>Title</strong></td>
    <td><strong>Author</strong></td>
    <td><strong>Genre</strong></td>
    <td><strong>Avg Rating</strong></td>
    <td><strong>Total Ratings</strong></td>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to "#{book.title}", book_path(book) %></td>
      <td><%= book.author %></td>
      <td><%= book.genre %></td>
      <td><%= show_stars(book.average_rating) %></td>
      <td><%= book.total_ratings %></td>
    </tr>
  <% end %>
</table>
<div>
  <p><%= link_to "Add a Book!", new_book_path %></p>
  <p><%= link_to "Back to Profile", user_path(current_user) %></p>
</div>