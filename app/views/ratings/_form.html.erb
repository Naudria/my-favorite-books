<% if @rating.errors.any? %>
  <div class="notice">
    <p>There were some errors:</p>
    <br>
    <% @rating.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
<% end %>
<div>
  <div class="box">
    <%= form_for(@rating) do |f| %>
      <div>
        <%= book_id_field(@rating) %>
        <%= f.hidden_field :user_id %>
      </div>
      <div>
        <%= f.label :stars %>
        <%= f.select :stars, [[1], [2], [3], [4], [5]] %>
      </div>
      <div>
        <%= f.label :notes %>
        <%= f.text_area :notes %>
      </div>
      <div>
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>