<div class="box">
  <%= form_for @user, url: signin_path, method: :post do |f| %>
    <div><%= f.label :name %>
      <%= f.text_field :name %></div>
    <div><%= f.label :password %>
      <%= f.password_field :password %></div>
    <%= f.submit "Sign In", class: "big_button" %>
  </div>
  Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
<% end %>
<%=link_to "Login via Facebook", "/auth/facebook"%>